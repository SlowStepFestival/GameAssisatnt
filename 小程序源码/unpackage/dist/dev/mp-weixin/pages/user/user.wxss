
.information{
	width: 100%;
	height: 200rpx;
	background: #F0F0F0;
}
.face{
	width: 60px;
	height: 60px;
	border-radius: 50%;
	margin: 20px 30px 20px 50px;
}
.name{
	display: inline-block;
	font-size: 15px;
	/* border: 1px solid red; */
}
.face, .name{
	vertical-align: middle;
}
.topTittle{
	margin: 20rpx;
	float: left;
	display: block;
	font-size: 30rpx;
}
.more{
	margin: 20rpx;
	float: right;
	display: block;
	color: #666666;
}
.top{
	height: 100rpx;
	border: 1rpx transparent;
}
.gameInfo1, .gameInfo2{
	display: inline-block;
	margin: 0 auto;
	margin-left: 40rpx;
}
.gamePicture{
	width: 160px;
	height: 90px;
	display: inline-block;
}
.line{
	width: 90%;
	height: 1px;
	margin: 0 auto;
	border-top: solid #D8D8D8 1px;
}

